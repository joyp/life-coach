extends ../shared/template
block content
  .row
    .col-xs-6
      h2= goal.name
      table.table.table-bordered
        thead
          tr
            th Name
            th Difficulty
            th Completed?
            th Description
            th Rank
        tbody
          each task in goal.tasks
            tr
              td= task.name
              td= task.difficulty
              td= task.isComplete
              td= task.description
              td= task.rank
    .col-xs-6
      h2 Add Task
      form(role='form', method='post', action='/goals/#{goal._id}')
        .form-group
          label(for='name') Name
          input.form-control#name(type='text', name='name', autofocus=true)
        .form-group
          label(for='description') Description
          textarea.form-control#description(name='description')
        .form-group
          label(for='difficulty') Difficulty
          select.form-control#difficulty(name='difficulty')
            option Easy
            option Medium
            option Hard
         .form-group
           label(for='rank') Rank
           input.form-control#rank(type='number', name='rank')
         button.btn.btn-primary(type='submit') Submit

block scripts
